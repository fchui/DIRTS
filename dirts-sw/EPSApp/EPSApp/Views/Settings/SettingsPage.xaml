<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPSApp.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Settings"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" Margin="0,12,0,0" />
            <Button Text="General Settings"/>
            <Button Text="Accessibility Settings"/>
            <Button Text="Documentation" Clicked="OpenBrowser" ClassId="https://drive.google.com/file/d/1PPzNP99stXFyLEcWwP9Sfl0yPHYKugnh/view?usp=sharing"/>
            <Button x:Name="Help_button" Clicked="OnButtonClicked" Text="Help"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
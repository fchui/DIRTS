<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPSApp.Views.PumpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text = "What kind of plant is it?" HorizontalTextAlignment="Center" />
            <Entry Placeholder="Search.." x:Name="entryBox"/>
            <Button Text="Submit"  Clicked="OnClickSubmit"/>
            <Label x:Name="ConfigurationMessage" VerticalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="Medium"/>
            <Button Text="RESET" Clicked="OnClickStop" BackgroundColor="#FF0000" VerticalOptions="End" Margin="0,16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>